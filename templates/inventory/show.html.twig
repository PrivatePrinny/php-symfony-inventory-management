{% extends 'base.html.twig' %}

{% block title %}Inventareintrag{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/show.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/inventory.js') }}"></script>
{% endblock %}

{% block body %}
    <h1>Inventory</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ inventory.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ inventory.Name }}</td>
            </tr>
            <tr>
                <th>Menge</th>
                <td>{{ inventory.amount }}</td>
            </tr>
            <tr>
                <th>Lagerort</th>
                <td>{{ inventory.storageplace }}</td>
            </tr>
        </tbody>
    </table>

  <a href="{{ path('app_inventory_index') }}"><img height="40px" width="40px" src="{{ asset('img/back.png') }}" /></a><br>
  <a href="{{ path('app_inventory_edit', {'id': inventory.id}) }}"><img height="40px" width="40px" src="{{ asset('img/edit.png')}}" /></a>

  {{ include('inventory/_delete_form.html.twig') }}
{% endblock %}
